#include <iostream>
#include <cmath>
using namespace std;

int main(){
    
    int n;
    int x;
    
    
    cout<<"Ingrese potencia"<<endl;
    cin>>n;
    cout<<"Ingrese coeficiente"<<endl;
    cin>>x;
    int coeficiente = pow(x,n); 
    int coeficiente1= pow(x,n-1);
    int sumatoria;
    
  
    
     sumatoria= coeficiente+coeficiente1;
    cout<<"Su sumatoria es igual a"<<sumatoria<<endl;
    
            
        
    
  return 0;  
    
}
